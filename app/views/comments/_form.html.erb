<%= form_for([@post, @post.comments.build]) do |f| %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content, :rows => 8 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
