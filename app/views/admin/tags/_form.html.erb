<%= fields_for :tags do |f| %>
  <div class="field">
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </div>

  <% unless f.object.nil? || f.object.new_record? %>
    <div class="field">
      <%= f.label :_destroy, 'Remove:' %>
      <%= f.check_box :_destroy %>
    </div>
  <% end %>
<% end %>
