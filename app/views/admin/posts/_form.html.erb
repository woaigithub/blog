<%= form_for([:admin, @post]) do |f| %>
  <div class="field">
    <%= f.label :category_id %><br/>
    <%= f.select(:category_id, options_from_collection_for_select(@categories, :id, :title)) %>
  </div>

  <div class="field">
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </div>
  
  <div class="field">
    <%= f.label :url %><br/>
    <%= f.text_field :url %>
  </div>

  <div class="field">
    <%= f.label :picture %><br/>
    <%= f.file_field :picture %>
  </div>

  <div class="field">
    <%= f.label :content %><br/>
    <%= f.cktext_area :content, :toolbar => 'Full', :width => 800, :height => 400 %>
  </div>

  <h2>Tags</h2>
    <%= render :partial => 'admin/tags/form',
               :locals => { :form => f } %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
