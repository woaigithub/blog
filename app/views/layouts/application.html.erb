<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield :title) %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>


  
  <nav>
    <%= render 'layouts/navbar_fixed_top' %>
  </nav>

  <header>
    <%= render 'layouts/header' %>
  </header>

  <div class="container blog-body" style="height:800px;">
    
    <div class="row">
      <div class="span8">
        <%= flash[:notice] %>
      </div>
    </div>
    <div class="row">
      <div class="span8">
        <%= yield %>
      </div>
      <div class="span3">
        <%= render 'layouts/sidebar'%>
      </div>
    </div>
  </div>

  <footer>
  <%= render 'layouts/footer' %>
  </footer>

</body>
</html>
